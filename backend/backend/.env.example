# Database Configuration (MySQL)
DB_HOST=your-database-host.com
DB_USER=your-database-user
DB_PASSWORD=your-secure-password
DB_NAME=your-database-name

# Discord OAuth Configuration
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
DISCORD_REDIRECT_URI=https://your-backend-url/api/auth/discord/callback

# Application Configuration
FRONTEND_URL=https://your-frontend-url.com
JWT_SECRET=your-secure-jwt-secret
NODE_ENV=development
PORT=8080

# Bot -> Backend shared secret (required for /api/bot/* routes)
# Must match the bot's BOT_API_TOKEN
BOT_API_TOKEN=your-long-random-token

# DANGEROUS: enables POST /api/admin/reset-database
# If unset, reset endpoint returns 501 and is disabled.
ADMIN_RESET_TOKEN=your-long-random-token

# Roblox Configuration
ROBLOX_GROUP_ID=32350433
